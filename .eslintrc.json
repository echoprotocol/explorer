{
	"extends": "airbnb",
	"parser": "babel-eslint",
	"parserOptions": {
		"sourceType": "module",
		"allowImportExportEverywhere": true
	},
	"globals": {
		"LANDING_BRIDGE": true,
		"INSTALL_NODE_LINK": true,
		"GRAPHQL_URL_HTTP_LINK": true,
		"GRAPHQL_URL_WS_LINK": true,
		"SERVER_URL": true,
		"SOLC_LIST_URL": true,
		"SOLC_BIN_URL": true,
		"APP_VERSION": true,
		"MAP_API_TOKEN": true,
		"ECHO_NODE": true
	},
	"env": {
		"browser": true,
		"jest": true
	},
	"plugins": [
		"react",
		"jsx-a11y",
		"import"
	],
	"rules": {
		"linebreak-style": 0,
		"arrow-parens": [
			"error",
			"always"
		],
		"import/no-extraneous-dependencies": "off",
		"import/prefer-default-export": "off",
		"react/forbid-prop-types": 0,
		"react/jsx-filename-extension": 0,
		"react/jsx-indent": [
			2,
			"tab"
		],
		"react/jsx-indent-props": [
			2,
			"tab"
		],
		"padded-blocks": [
			"error",
			{
				"classes": "always"
			}
		],
		"class-methods-use-this": 0,
		"react/prefer-stateless-function": 0,
		"jsx-a11y/anchor-is-valid": 0,
		"jsx-a11y/label-has-for": [
			2,
			{
				"components": [
					"label"
				],
				"required": {
					"some": [
						"nesting",
						"id"
					]
				},
				"allowChildren": false
			}
		],
		"no-param-reassign": 0,
		"no-tabs": 0,
		"max-len": 0,
		"indent": [
			"error",
			"tab",
			{
				"SwitchCase": 1
			}
		]
	}
}
